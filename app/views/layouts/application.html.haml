!!!html
%html
  %head
    %title= yield(:title)
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Lato:400,700&subset=latin,latin-ext', type: 'text/css', media: 'all'
    = csrf_meta_tags
  %body
    %header.header-top= render "header"
    #body.container-fluid{class: "#{controller.action_name}"}= yield
    #footer= render "footer"
    = javascript_include_tag 'application'
