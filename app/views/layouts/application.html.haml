!!!html
%html
  %head
    %title= yield(:title)
    %meta{:name => 'viewport', :contet => 'width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no'}
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Lato:400,700&subset=latin,latin-ext', type: 'text/css', media: 'all'
    = csrf_meta_tags
    = javascript_include_tag 'application'
  %body
    %header.header-top= render "header"
    %section.main-content{:class => "#{controller.action_name}"}= yield
    %section.footer= render "footer"
