:coffee
  $(document).ready ->
    $('[data-dialog-id]').on 'click', (_event) ->
      _event.preventDefault()

      $dialog = $('#' + $(this).attr('data-dialog-id'))
      $dialog.addClass('open');

      # Bind close events
      $dialog.find('.dialog-background, .js-dialog-close').one 'click', ->
        $dialog.removeClass('open');
        return

      return
