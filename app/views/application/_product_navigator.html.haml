:coffee
  $(document).ready ->
    $('.js-show-more').on 'click', (_event) ->
      $navigator = $(this).closest('.navigator')

      $navigator.toggleClass 'open'
      $navigator.find('ul li').one 'click', ->
        $navigator.removeClass 'open'
        return
